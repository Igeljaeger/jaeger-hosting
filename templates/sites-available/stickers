server {

        root /var/www/stickers/stickerpicker/web;
        index index.html index.htm index.nginx-debian.html;

        server_name stickers.jaeger.website;

        location / {
                try_files $uri $uri/ =404;
        }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/stickers.jaeger.website/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/stickers.jaeger.website/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = stickers.jaeger.website) {
        return 301 https://$host$request_uri;
    } 


        listen 80;

        server_name stickers.jaeger.website;
    return 404; 


}

